@using Laboratorio5_EDD.DTO;
@model IEnumerable<AutosDTO>
@{
    ViewData["Title"] = "SubirArchivos";
}
@using (Html.BeginForm("CargarData","Autos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="file" /> 
    <button type="submit" asp-controller="Autos" asp-action="CargarData" class="btn btn-danger">Cargar data</button>
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
else
{
    <div class="card">
        <h5 class="card-header text-center">Ingreso Exitoso</h5>
        <div class="card-body">
            <h5 class="card-title text-center">Lista datos ingresados exitosamente</h5>
            <p class="card-text text-center">@ViewData["Mensaje"]</p>
            <div class="btn-group d-flex justify-content-center align-items-center" role="group" aria-label="Basic mixed styles example">
                <a class="btn btn-danger mx-3" asp-area="" asp-controller="Home" asp-action="vstAgregarPropietarios">Ingresar nuevo Carro</a>
                <a class="btn btn-primary mx-3" asp-area="" asp-controller="Autos" asp-action="ListAutos">Listar Carros</a>
                <a class="btn btn-warning mx-3" asp-area="" asp-controller="Home" asp-action="Index">Regresar al inicio</a>
            </div>
        </div>
    </div>

}